<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_project_overview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/layout_project_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Avatar -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_project_avatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/default_avatar"
            android:layout_marginBottom="16dp"
            android:contentDescription="Project avatar" />

        <!-- Project Name -->
        <TextView
            android:id="@+id/text_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Name"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <!-- Brand, Scale, Status -->
        <TextView
            android:id="@+id/text_project_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bandai • 1/144 • In Progress"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="16dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/text_project_description_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="4dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text_project_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is the project's description."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="24dp" />

        <!-- Placeholder for additional content -->

    </LinearLayout>
</ScrollView>
